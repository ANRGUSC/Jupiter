#!/bin/bash

make clean

rm -rf source/circe
sphinx-apidoc -o source/circe ../circe

rm -rf source/profilers
sphinx-apidoc -o source/profilers/central ../profilers/central
sphinx-apidoc -o source/profilers/droplet ../profilers/droplet
sphinx-apidoc -o source/profilers/central/resource_profiling_files ../profilers/central/resource_profiling_files


rm -rf source/scripts
sphinx-apidoc -o source/scripts ../scripts

rm -rf source/wave
sphinx-apidoc -o source/wave/home ../wave/home
sphinx-apidoc -o source/wave/worker ../wave/worker

make html
xdg-open build/html/index.html